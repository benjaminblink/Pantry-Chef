# Database Configuration
# For local dev: use "localhost"
# For Docker: use "postgres"
DATABASE_URL="postgresql://pantrychef:pantrychef_dev_password@postgres:5432/pantrychef"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# Walmart Affiliate API Configuration
# Get your credentials from https://walmart.io/
# Your Consumer ID (UUID format) - get this from walmart.io
WALMART_CONSUMER_ID="your-consumer-id-uuid-here"

# Your Private Key (with PEM headers) - get this from walmart.io
WALMART_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
your-private-key-here
-----END PRIVATE KEY-----"

# Key version (usually "1")
WALMART_KEY_VERSION="1"

# Optional: Impact Radius Publisher ID for cart creation
WALMART_PUBLISHER_ID="your-publisher-id-here"

# Host IP for displaying network URL in backend logs
HOST_IP="localhost"

# Server Configuration
PORT="3000"
NODE_ENV="development"

# RevenueCat Configuration
# Get your API keys from https://app.revenuecat.com/
# Note: Use the PUBLIC API key (not secret key) for the mobile app
REVENUECAT_API_KEY="test_IupNeuZCCqhYpxgFCsArwahMnbw"
